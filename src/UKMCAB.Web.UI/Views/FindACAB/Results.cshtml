@model SearchResultsViewModel
@{
  ViewData["nav"] = "search";
}

<a asp-action="Index" class="govuk-back-link">Back</a>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl govuk-!-margin-top-3">Search results</h1>
        <p class="govuk-body govuk-!-font-size-24 govuk-!-margin-top-2 govuk-!-margin-bottom-6">CABs matching <strong class="govuk-!-font-weight-bold">"@Model.Keywords"</strong></p>
    </div>

</div>
@if (Model.IsAdmin)
{
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <button class="govuk-button govuk-!-margin-top-7" data-module="govuk-button">
            Add a new CAB
        </button>
    </div>
</div>
}

<div class="govuk-grid-row">
    <partial name="Partials/_ResultsForm", model="Model"/>
</div>

