@{
    ViewData["nav"] = "search";
}

<a href="/" class="govuk-back-link">Back</a>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl govuk-!-margin-top-3">Find a CAB</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="get" asp-action="Results">
            
            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--m" for="keywords">
                        Enter your keyword(s)
                    </label>
                </h1>
                <div id="keywords-hint" class="govuk-hint">
                    Search on any of the following:
                    <ul class="govuk-list govuk-list--bullet govuk-hint govuk-!-margin-bottom-7 govuk-!-margin-top-3">
                        <li>standards number</li>
                        <li>product name</li>
                        <li>regulation name</li>
                        <li>schedule name</li>
                        <li>module name</li>
                        <li>part name</li>
                        <li>body number</li>
                        <li>CAB name</li>
                    </ul>
                </div>
                <input class="govuk-input" id="keywords" name="keywords" type="text" aria-describedby="keywords-hint">
            </div>

            <button class="govuk-button govuk-!-margin-top-7" data-module="govuk-button">
                Continue
            </button>

        </form>
        

    </div>
</div>
