<h1 class="govuk-heading-l govuk-!-margin-top-3">Find a CAB</h1>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form class="" method="get" action="@Url.RouteUrl(HomeController.Routes.SearchResults)">
            
            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--m" for="keywords">
                        Enter your keyword(s)
                    </label>
                </h1>
                <div id="keywords-hint" class="govuk-hint">
                    Search on standards number, product name, regulation name, schedule name, module name, part name, body number or CAB name<br />
                    Example 1: BS EN 16487<br />
                    Example 2: plasterboard<br />
                    Example 3: Benham Testing Ltd
                </div>
                <input class="govuk-input" id="keywords" name="keywords" type="text" aria-describedby="keywords-hint">
            </div>

            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>
        

    </div>
</div>
