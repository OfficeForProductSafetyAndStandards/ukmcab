@using Microsoft.AspNetCore.Identity
@using UKMCAB.Identity.Stores.CosmosDB

@inject SignInManager<UKMCABUser> SignInManager
@inject UserManager<UKMCABUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="form-inline" asp-area="Account" asp-controller="Home" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="govuk-header__link app-signin-link">Logout</button>
    </form>
}
else
{
    <a class="govuk-header__link app-signin-link" id="login" asp-area="Account" asp-controller="Home" asp-action="Login">Login</a>
}
