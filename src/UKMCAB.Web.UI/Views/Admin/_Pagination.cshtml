@model UKMCAB.Web.UI.Models.ViewModels.Admin.PaginationViewModel
<nav class="govuk-pagination" role="navigation" aria-label="results">
    @if (Model.ShowPrevious)
    {
        <div class="govuk-pagination__prev">
            <a class="govuk-link govuk-pagination__link" asp-action="List" asp-route-pageNumber="@(Model.PageNumber -1)" rel="prev">
                <svg class="govuk-pagination__icon govuk-pagination__icon--prev" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                    <path d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
                </svg>
                <span class="govuk-pagination__link-title">Previous</span></a>
        </div>
    }

    <ul class="govuk-pagination__list">
        @if (Model.PageNumber > 1)
        {
            <li class="govuk-pagination__item">
                <a class="govuk-link govuk-pagination__link" asp-action="List" asp-route-pageNumber="1" aria-label="Page 1">
                    1
                </a>
            </li>
        }
        @if (Model.PageNumber > 4)
        {
            <li class="govuk-pagination__item govuk-pagination__item--ellipses">&ctdot;</li>
        }
        else if (Model.PageNumber == 4)
        {
            <li class="govuk-pagination__item">
                <a class="govuk-link govuk-pagination__link" asp-action="List" asp-route-pageNumber="2" aria-label="Page 2">
                    2
                </a>
            </li>
        }
        @if (Model.PageNumber -1 > 1)
        {
            var previousPageNumber = Model.PageNumber - 1;
            <li class="govuk-pagination__item">
                <a class="govuk-link govuk-pagination__link"  asp-action="List" asp-route-pageNumber="@previousPageNumber" aria-label="Page @previousPageNumber">
                    @previousPageNumber
                </a>
            </li>
        }
        <li class="govuk-pagination__item govuk-pagination__item--current">
            <a class="govuk-link govuk-pagination__link" href="#" aria-label="Page @Model.PageNumber" aria-current="page">
                @Model.PageNumber
            </a>
        </li>
        @if (Model.PageNumber + 1 < Model.TotalPages)
        {
            var nextPage = Model.PageNumber + 1;
            <li class="govuk-pagination__item">
                <a class="govuk-link govuk-pagination__link"  asp-action="List" asp-route-pageNumber="@nextPage" aria-label="@nextPage">
                    @nextPage
                </a>
            </li>
        }
        @if (Model.PageNumber < Model.TotalPages - 3)
        {
            <li class="govuk-pagination__item govuk-pagination__item--ellipses">&ctdot;</li>
        }
        else if (Model.PageNumber == Model.TotalPages - 3)
        {
            var penultimatePage = Model.TotalPages - 1;
            <li class="govuk-pagination__item">
                <a class="govuk-link govuk-pagination__link"  asp-action="List" asp-route-pageNumber="@penultimatePage" aria-label="Page  @penultimatePage">
                    @penultimatePage
                </a>
            </li>
        }
        @if (Model.PageNumber < Model.TotalPages)
        {
            <li class="govuk-pagination__item">
                <a class="govuk-link govuk-pagination__link"   asp-action="List" asp-route-pageNumber="@Model.TotalPages" aria-label="Page @Model.TotalPages">
                    @Model.TotalPages
                </a>
            </li>
        }
    </ul>
    @if (Model.ShowNext)
    {
        <div class="govuk-pagination__next">
            <a class="govuk-link govuk-pagination__link" asp-action="List" asp-route-pageNumber="@(Model.PageNumber + 1)" rel="next"> <span class="govuk-pagination__link-title">Next</span>
                <svg class="govuk-pagination__icon govuk-pagination__icon--next" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                    <path d="m8.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
                </svg></a>
        </div>
    }
</nav>

