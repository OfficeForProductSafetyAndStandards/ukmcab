@model SubscriptionViewModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <a href="@Url.RouteUrl(SubscriptionsController.Routes.ManageSubscription, new{id= ViewContext.RouteData.Values.GetValueOrDefault("id")})" class="govuk-back-link">Back</a>

        <form method="post">
            <div class="govuk-!-margin-bottom-1">
                <h1 class="govuk-heading-xl">
                    Unsubscribe
                </h1>
            </div>

            <p class="govuk-body">
                Are you sure you want to unsubscribe from:
            </p>

            <p class="govuk-body govuk-!-margin-bottom-8">
                @if (Model.Subscription.SubscriptionType == UKMCAB.Subscriptions.Core.Domain.SubscriptionType.Search)
                {
                    <strong class="govuk-!-font-weight-bold">UKMCAB search results</strong>
                }
                else
                {
                    <strong class="govuk-!-font-weight-bold">UKMCAB profile for '@Model.Subscription.CabName'</strong>
                }
            </p>

            <div class="govuk-button-group">
                <button class="govuk-button" type="submit">Unsubscribe</button>
                <a class="govuk-link" href="@Url.RouteUrl(SubscriptionsController.Routes.ManageSubscription, new{id= ViewContext.RouteData.Values.GetValueOrDefault("id")})">Cancel</a>
            </div>

        </form>
    </div>
</div>
