@page
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model UKMCAB.Web.UI.Areas.Identity.Pages.Account.RegisterUKASUserModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form id="registerForm" method="post">
            <partial name="_ValidationSummary" model="Model.ModelState"/>

            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Register as UKAS user
                    </h1>
                </legend>
                <div class="govuk-form-group @ShowErrorClass("Input.Email")">
                    <span asp-validation-for="Input.Email" class="govuk-error-message"></span>
                    <label asp-for="Input.Email" class="govuk-label"></label>
                    <input asp-for="Input.Email" class="govuk-input" autocomplete="username" aria-required="true"/>
                </div>
                <div class="govuk-form-group @ShowErrorClass("Input.Password")">
                    <span asp-validation-for="Input.Password" class="govuk-error-message"></span>
                    <label asp-for="Input.Password" class="govuk-label"></label>
                    <input asp-for="Input.Password" class="govuk-input" autocomplete="new-password" aria-required="true"/>
                </div>
                <div class="govuk-form-group @ShowErrorClass("Input.ConfirmPassword")">
                    <span asp-validation-for="Input.ConfirmPassword" class="govuk-error-message"></span>
                    <label asp-for="Input.ConfirmPassword" class="govuk-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="govuk-input" autocomplete="new-password" aria-required="true"/>
                </div>
                <button id="registerSubmit" type="submit" class="govuk-button">Request account</button>
            </fieldset>
        </form>
    </div>
</div>

@functions
{
    public string ShowErrorClass(string key)
    {
        return Model.ModelState.Keys.Any(k => k.Equals(key)) && Model.ModelState[key].ValidationState == ModelValidationState.Invalid ? "govuk-form-group--error" : string.Empty;
    }
}

