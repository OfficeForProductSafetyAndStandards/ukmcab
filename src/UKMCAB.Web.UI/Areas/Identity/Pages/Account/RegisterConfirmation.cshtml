@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                Register email confirmation
            </h1>
        </legend>
            @if (@Model.DisplayConfirmAccountLink)
            {
                <p class="govuk-body">This app does not currently have a real email sender registered, normally this would be emailed:</p> 
                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="govuk-button">Click here to confirm your account</a>
            }
            else
            {
                <p class="govuk-body">
                    Please check your email to confirm your account.
                </p>
            }
        </fieldset>
    </div>
</div>

