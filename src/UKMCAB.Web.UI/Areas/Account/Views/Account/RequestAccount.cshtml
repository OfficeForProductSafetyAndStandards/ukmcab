@model RequestAccountViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">

        <form method="post">
            <input asp-for="Token" type="hidden" />
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Request user account
                    </h1>
                </legend>

                <div class="govuk-form-group">
                    <label class="govuk-label" asp-for="FirstName">
                        First name
                    </label>
                    <input class="govuk-input" asp-for="FirstName" type="text" autocomplete="address-line1">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" asp-for="Surname">
                        Surname
                    </label>
                    <input class="govuk-input" asp-for="Surname" type="text" autocomplete="address-line2">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" asp-for="ContactEmailAddress">
                        Email address
                    </label>
                    <input class="govuk-input govuk-!-width-two-thirds" asp-for="ContactEmailAddress" type="text" autocomplete="address-level2">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" asp-for="Organisation">
                        Organisation
                    </label>
                    <input class="govuk-input" asp-for="Organisation" type="text" autocomplete="address-line2">
                </div>
                <div class="govuk-form-group">
                    <h1 class="govuk-label-wrapper">
                        <label class="govuk-label govuk-label--l" asp-for="Comments">
                            Can you provide more detail?
                        </label>
                    </h1>
                    <div id="more-detail-hint" class="govuk-hint">
                        Please tell us why you need an account.
                    </div>
                    <textarea class="govuk-textarea" asp-for="Comments" rows="5" aria-describedby="more-detail-hint"></textarea>
                </div>
            </fieldset>
            <button class="govuk-button" data-module="govuk-button">
                Submit
            </button>
        </form>


    </div>
</div>


