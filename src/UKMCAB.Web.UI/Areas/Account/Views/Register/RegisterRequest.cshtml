@model UKMCAB.Web.UI.Models.ViewModels.Account.RegisterRequestViewModel
@{
    var titlePart = Constants.Roles.OGDUser.Equals(Model.Role, StringComparison.InvariantCultureIgnoreCase) ?
        "OGD user" :
        Constants.Roles.OPSSAdmin.Equals(Model.Role, StringComparison.InvariantCultureIgnoreCase) ?
            "OPSS administrator" :
            "UKAS user";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form id="registerForm" method="post">
            <partial name="_ValidationSummary" model="ViewData.ModelState"/>

            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Register as @titlePart
                    </h1>
                </legend>
                <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState,"Email")">
                    <span asp-validation-for="Email" class="govuk-error-message"></span>
                    <label asp-for="Email" class="govuk-label"></label>
                    <input asp-for="Email" class="govuk-input" autocomplete="username" aria-required="true"/>
                </div>
                <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState,"Password")">
                    <span asp-validation-for="Password" class="govuk-error-message"></span>
                    <label asp-for="Password" class="govuk-label"></label>
                    <input asp-for="Password" class="govuk-input" autocomplete="new-password" aria-required="true"/>
                </div>
                <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState,"ConfirmPassword")">
                    <span asp-validation-for="ConfirmPassword" class="govuk-error-message"></span>
                    <label asp-for="ConfirmPassword" class="govuk-label"></label>
                    <input asp-for="ConfirmPassword" class="govuk-input" autocomplete="new-password" aria-required="true"/>
                </div>
                @if (!Constants.Roles.UKASUser.Equals(Model.Role, StringComparison.InvariantCultureIgnoreCase))
                {
                    <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState, "LegislativeAreas")">
                        <span asp-validation-for="LegislativeAreas" class="govuk-error-message"></span>
                        <label asp-for="LegislativeAreas" class="govuk-label"></label>

                        <div class="govuk-checkboxes govuk-checkboxes--small" data-module="govuk-checkboxes">
                            @foreach (var area in Model.LegislativeAreaList)
                            {
                                <div class="govuk-checkboxes__item">
                                    <input class="govuk-checkboxes__input" id="LegislativeAreas" name="LegislativeAreas" type="checkbox" value="@area" checked="@(Model?.LegislativeAreas != null && Model.LegislativeAreas.Any(l => l == area))">
                                    <label class="govuk-label govuk-checkboxes__label">
                                        @area
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState, "RequestReason")">
                        <span asp-validation-for="RequestReason" class="govuk-error-message"></span>
                        <label asp-for="RequestReason" class="govuk-label"></label>
                        <input asp-for="RequestReason" class="govuk-input" autocomplete="requestreason" aria-required="true"/>
                    </div>
                }
                <button id="registerSubmit" type="submit" class="govuk-button">Request account</button>
            </fieldset>
        </form>
    </div>
</div>
