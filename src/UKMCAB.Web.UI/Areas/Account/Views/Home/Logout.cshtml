@model UKMCAB.Web.UI.Models.ViewModels.Account.LogoutViewModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Logout</h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (User.Identity.IsAuthenticated)
        {
        <form id="account" method="post">
            <input type="hidden" asp-for="ReturnURL"/>
            <button id="logout-submit" type="submit" class="govuk-button">Click here to Logout</button>
        </form>
        }
        else
        {
            <p class="govuk-body">You have successfully logged out of the application.</p>
        }
    </div>
</div>
