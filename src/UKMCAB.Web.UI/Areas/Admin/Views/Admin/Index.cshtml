@using System.Security.Claims;
@using UKMCAB.Core.Security;
@using UKMCAB.Web.UI.Areas.Admin.Controllers;
@model BasicPageModel
@{
    ViewData["nav"] = "admin";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Admin dashboard</h1>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
        <div class="govuk-form-group">
            <a asp-route="@AdminController.Routes.CABManagement" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                Manage CABs
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                </svg>
            </a>        
        </div>
        
        @if (User.HasClaim(Claims.UserManagement))
        {
            <div class="govuk-form-group">
                <a asp-route="@UserAdminController.Routes.UserList" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                    Manage users
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                    </svg>
                </a>
            </div>
        }

    </div>
</div>
