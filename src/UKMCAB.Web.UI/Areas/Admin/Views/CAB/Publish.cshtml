@model UKMCAB.Web.UI.Models.ViewModels.Admin.CAB.PublishCABViewModel
@{
    var returnUrl = Model.ReturnURL;
}

@section BackButton
{
    <div class="govuk-width-container ">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <a asp-area="Admin" asp-controller="CAB" asp-action="Summary" asp-route-id="@Model.CABId" asp-route-returnUrl="@returnUrl" class="govuk-back-link">Back</a>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <fieldset class="govuk-fieldset">
            <form method="post">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading ukmcab-padding-bottom-20">
                        Publish @Model.CABName
                    </h1>
                </legend>

                <input type="hidden" asp-for="ReturnURL" value="@Model.ReturnURL" />
                <input type="hidden" asp-for="CABId" value="@Model.CABId" />                
                <govuk-character-count asp-for="PublishInternalReason" max-length="1000" rows="5">
                    <govuk-character-count-label class="govuk-label--m" is-page-heading="false">
                        User notes (optional)
                    </govuk-character-count-label>
                    <govuk-character-count-hint>
                        These notes will only be seen by users that are signed in to the UKMCAB service.
                    </govuk-character-count-hint>
                </govuk-character-count>
 
                <govuk-character-count asp-for="PublishPublicReason" max-length="1000">
                    <govuk-character-count-label class="govuk-label--m" is-page-heading="false">
                        Reason (optional)
                    </govuk-character-count-label>
                    <govuk-character-count-hint>
                        Enter the reason for publishing this CAB. This will be shown to all users in the CAB history page.
                    </govuk-character-count-hint>
                </govuk-character-count>               

                <div class="govuk-button-group">                    
                    <govuk-button type="submit">Publish</govuk-button>
                    <a class="govuk-link govuk-link--no-visited-state" asp-area="admin" asp-controller="cab" asp-action="summary" asp-route-id="@Model.CABId" asp-route-returnUrl="@returnUrl">Cancel</a>
                </div>
            </form>
        </fieldset>
    </div>
</div>
