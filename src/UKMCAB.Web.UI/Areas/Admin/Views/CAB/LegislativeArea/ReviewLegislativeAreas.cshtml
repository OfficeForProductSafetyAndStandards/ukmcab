@using UKMCAB.Web.UI.Areas.Admin.Controllers.LegislativeArea
@using UKMCAB.Web.UI.Models.ViewModels.Admin.CAB.Enums
@model UKMCAB.Web.UI.Models.ViewModels.Admin.CAB.LegislativeArea.Review.ReviewLegislativeAreasViewModel
@{
    var id = this.Url.ActionContext.HttpContext.Request.RouteValues.GetValueOrDefault("id").ToString();
    var cabId = Model.CABId.ToString() ?? id;
}
@section BackButton
{
    <div class="govuk-width-container ">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                @if (Model.IsFromSummary && cabId != null)
                {
                    <govuk-back-link asp-area="Admin" asp-controller="CAB" asp-action="Summary" asp-route-id="@cabId" asp-route-subSectionEditAllowed="true" />
                }
                else
                {
                   <govuk-back-link href="@Url.RouteUrl(LegislativeAreaDetailsController.Routes.AddLegislativeArea, new { id = Model.CABId })"/>
                }                
        </div>
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model.SuccessBannerMessage))
{
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <govuk-notification-banner type="Success">
                    <p class="govuk-notification-banner__heading">
                        @Model.SuccessBannerMessage
                    </p>
                </govuk-notification-banner>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <form method="post" enctype="multipart/form-data" novalidate>
        <input type="hidden" asp-for="IsFromSummary" />
        <div class="govuk-grid-column-full">
            <div class="govuk-form-group">
                @if (!ViewData.ModelState.IsValid)
                {
                    <govuk-error-summary>
                        <govuk-error-summary-item href="#@Model.ErrorLink">Select a scope of appointment</govuk-error-summary-item>
                    </govuk-error-summary>
                }
                <fieldset class="govuk-fieldset" aria-describedby="fieldset-title">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <span class="govuk-caption-m">@Model.Title</span>
                        <h1 id="fieldset-title" class="govuk-heading-l">@Model.Title</h1>
                    </legend>
                    @if (Model.ActiveLAItems.Any())
                    {
                        @for (int i = 0; i < Model.ActiveLAItems.Count; i++)
                        {
                            var legislativeArea = Model.ActiveLAItems[i];                           

                            <input type="hidden" asp-for="CABId">
                            <input type="hidden" asp-for="ActiveLAItems[i].Name">
                            <input type="hidden" asp-for="ActiveLAItems[i].LegislativeAreaId">

                            <details class="govuk-details ukmcab-expander govuk-!-margin-top-2 govuk-!-margin-bottom-0" @(Model.ErrorLink == legislativeArea.Name ? "open" : "")>
                                <summary class="govuk-details__summary">
                                    <span class="govuk-details__summary-text">
                                        @legislativeArea.Name
                                    </span>
                                </summary>
                                <div class="govuk-details__text govuk-!-padding-top-1">
                                    <govuk-button-link asp-route="@LegislativeAreaAdditionalInformationController.Routes.LegislativeAreaAdditionalInformation"
                                                       asp-route-id="@Model.CABId" asp-route-laId="@legislativeArea.LegislativeAreaId" 
                                                       asp-route-fromSummary="@Model.IsFromSummary" class="govuk-button--secondary">
                                        Edit legislative area additional information
                                    </govuk-button-link>

                                    @if (Model.ShowArchiveLegislativeAreaAction && legislativeArea.IsArchived is null or false)
                                    {
                                        <govuk-button-link asp-route="@LegislativeAreaDetailsController.Routes.RemoveOrArchiveLegislativeArea" class="govuk-button--secondary ukmcab-margin-left-10" asp-route-id="@Model.CABId" asp-route-legislativeAreaId="@legislativeArea.LegislativeAreaId" asp-route-actionType="@RemoveActionEnum.Archive" asp-route-returnURl="remove-legislative-area" asp-route-fromSummary="@Model.IsFromSummary">
                                            Archive legislative area
                                        </govuk-button-link>
                                    }
                                    <govuk-button-link asp-route="@LegislativeAreaDetailsController.Routes.RemoveOrArchiveLegislativeArea" class="govuk-button--secondary ukmcab-margin-left-10"
                                                       asp-route-id="@Model.CABId" asp-route-legislativeAreaId="@legislativeArea.LegislativeAreaId" asp-route-actionType="@RemoveActionEnum.Remove" asp-route-returnURl="remove-legislative-area" asp-route-fromSummary="@Model.IsFromSummary">
                                        Remove legislative area
                                    </govuk-button-link>

                                    @if (legislativeArea.CanChooseScopeOfAppointment)
                                    {
                                        <table class="govuk-table ukmcab-table govuk-!-margin-top-3">
                                            @if (Model.ErrorLink == legislativeArea.Name)
                                            {
                                                <govuk-error-message id="@legislativeArea.Name">Select a scope of appointment</govuk-error-message>
                                            }
                                            <caption class="govuk-table__caption govuk-table__caption--m">Scope of appointment</caption>
                                            <thead class="govuk-table__head">
                                                <tr class="govuk-table__row">

                                                    <th scope="col" class="govuk-table__header width-one-twentieth"></th>

                                                    @if (legislativeArea.ShowPurposeOfAppointmentColumn)
                                                    {
                                                        <th scope="col" class="govuk-table__header">Purpose of appointment</th>
                                                    }
                                                    @if (legislativeArea.ShowCategoryColumn)
                                                    {
                                                        <th scope="col" class="govuk-table__header">Product category</th>
                                                    }
                                                    @if (legislativeArea.ShowProductColumn)
                                                    {
                                                        <th scope="col" class="govuk-table__header">Product</th>
                                                    }
                                                    @if (legislativeArea.ScopeOfAppointments.Any())
                                                    {
                                                        <th scope="col" class="govuk-table__header">Applicable conformity assessment procedure</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody class="govuk-table__body">
                                                @if (!legislativeArea.ScopeOfAppointments.Any())
                                                {
                                                    <tr>
                                                        <td>No scope of appointments</td>
                                                    </tr>
                                                }

                                                @for (int j = 0; j < legislativeArea.ScopeOfAppointments.Count; j++)
                                                {
                                                    var scopeOfAppointment = legislativeArea.ScopeOfAppointments[j];
                                                    var noOfProductsInScopeOfAppointment = scopeOfAppointment.NoOfProductsInScopeOfAppointment;
                                                    var nextProductIndex = j;
                                                    @for (int k = 0; k < noOfProductsInScopeOfAppointment; k++)
                                                    {
                                                        var showBorder = k == noOfProductsInScopeOfAppointment - 1;
                                                        <tr class="govuk-table__row">
                                                            @if (k == 0)
                                                            {
                                                                <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                    <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                                                                        <div class="govuk-radios__item">
                                                                            <input id="LA-items[@(i)]-radio-[@(j)]" class="govuk-radios__input" type="radio" asp-for="ActiveLAItems[i].SelectedScopeofAppointmentId" value="@scopeOfAppointment.ScopeId">
                                                                            <label class="govuk-label govuk-radios__label govuk-!-display-block"></label>
                                                                        </div>
                                                                    </div>
                                                                    <input type="hidden" asp-for="ActiveLAItems[i].ScopeOfAppointments[j].ScopeId">
                                                                    <input type="hidden" asp-for="ActiveLAItems[i].ScopeOfAppointments[j].LegislativeArea.Id">
                                                                    <input type="hidden" asp-for="ActiveLAItems[i].ScopeOfAppointments[j].LegislativeArea.Title">
                                                                </td>
                                                                @if (legislativeArea.ShowPurposeOfAppointmentColumn)
                                                                {
                                                                    <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                        <label aria-hidden="true">Purpose of appointment</label>
                                                                        @scopeOfAppointment.PurposeOfAppointment
                                                                    </td>
                                                                }

                                                                @if (legislativeArea.ShowCategoryColumn)
                                                                {
                                                                    <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                        <label aria-hidden="true">Product category</label>
                                                                        @scopeOfAppointment.Category
                                                                        @if (!string.IsNullOrEmpty(scopeOfAppointment.SubCategory))
                                                                        {
                                                                            <div class="govuk-!-margin-top-3">Product sub-category</div>
                                                                            <div>@scopeOfAppointment.SubCategory</div>
                                                                        }
                                                                    </td>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                </td>
                                                                @if (legislativeArea.ShowPurposeOfAppointmentColumn)
                                                                {
                                                                    <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                    </td>
                                                                }

                                                                @if (legislativeArea.ShowCategoryColumn)
                                                                {
                                                                    <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                    </td>
                                                                }
                                                            }

                                                            @if (legislativeArea.ShowProductColumn)
                                                            {
                                                                <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                    <label aria-hidden="true">Product</label>
                                                                    @Html.ValueOrNotApplicable(scopeOfAppointment.Product)
                                                                </td>
                                                            }
                                                            <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                <label aria-hidden="true">Applicable conformity assessment procedure</label>
                                                                @if (scopeOfAppointment.Procedures != null)
                                                                {
                                                                    @foreach (var procedure in scopeOfAppointment.Procedures)
                                                                    {
                                                                        <p>@procedure</p>
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <span>Not provided</span>
                                                                }
                                                            </td>
                                                        </tr>

                                                        if ((nextProductIndex + 1) < (j + noOfProductsInScopeOfAppointment))
                                                        {
                                                            nextProductIndex += 1;
                                                            scopeOfAppointment = legislativeArea.ScopeOfAppointments[nextProductIndex];
                                                            <input type="hidden" asp-for="ActiveLAItems[i].ScopeOfAppointments[nextProductIndex].ScopeId">
                                                            <input type="hidden" asp-for="ActiveLAItems[i].ScopeOfAppointments[nextProductIndex].LegislativeArea.Id">
                                                            <input type="hidden" asp-for="ActiveLAItems[i].ScopeOfAppointments[nextProductIndex].LegislativeArea.Title">
                                                        }
                                                        else
                                                        {
                                                            j = nextProductIndex;
                                                        }
                                                    }
                                                }
                                            </tbody>
                                        </table>

                                        <govuk-button class="govuk-button--secondary" type="submit" name="submitType" value="Add-@legislativeArea.LegislativeAreaId">Add scope of appointment</govuk-button>
                                        @if (legislativeArea.ScopeOfAppointments.Any())
                                        {
                                            <govuk-button class="govuk-button--secondary ukmcab-margin-left-10" type="submit" name="submitType" value="@Constants.SubmitType.Edit-@Model.ActiveLAItems[i].Name">Edit scope of appointment</govuk-button>
                                            <govuk-button class="govuk-button--secondary ukmcab-margin-left-10" type="submit" name="submitType" value="@Constants.SubmitType.Remove-@Model.ActiveLAItems[i].Name">Remove scope of appointment</govuk-button>
                                        }
                                    }
                                </div>
                            </details>
                        }
                    }
                    else
                    {
                        <div class="govuk-warning-text">
                            <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                            <strong class="govuk-warning-text__text">
                                <span class="govuk-warning-text__assistive">Warning</span>
                                No legislative area has been added.
                            </strong>
                        </div>
                    }
                </fieldset>
            </div>

            <div>
                <govuk-button-link class="govuk-button--secondary" href="@Url.RouteUrl(LegislativeAreaDetailsController.Routes.AddLegislativeArea, new { id = Model.CABId, fromSummary = Model.IsFromSummary })">Add legislative area</govuk-button-link>
            </div>
            <div>
                <hr class="ukmcab-border" />
            </div>
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="fieldset-title">

                    @if (Model.ArchivedLAItems.Any())
                    {
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h2 id="fieldset-title" class="govuk-heading-m ukmcab-padding-top-10">Archived legislative areas</h2>
                        </legend>
                        @for (int i = 0; i < Model.ArchivedLAItems.Count; i++)
                        {
                            var archivedLegislativeArea = Model.ArchivedLAItems[i];
                            <details class="govuk-details ukmcab-expander govuk-!-margin-top-2 govuk-!-margin-bottom-0">
                                <summary class="govuk-details__summary">
                                    <span class="govuk-details__summary-text">
                                        @archivedLegislativeArea.Name
                                    </span>
                                </summary>
                                <div class="govuk-details__text govuk-!-padding-top-1">
                                    <govuk-button-link asp-route="@LegislativeAreaDetailsController.Routes.RemoveOrArchiveLegislativeArea" class="govuk-button--secondary"
                                        asp-route-id="@Model.CABId" asp-route-legislativeAreaId="@archivedLegislativeArea.LegislativeAreaId" asp-route-returnURl="remove-legislative-area" asp-route-actionType="@RemoveActionEnum.Remove" asp-route-fromSummary="@Model.IsFromSummary">
                                        Remove archived legislative area
                                    </govuk-button-link>
                                    <table class="govuk-table ukmcab-table govuk-!-margin-top-3">
                                        <caption class="govuk-table__caption govuk-table__caption--m">Scope of appointment</caption>
                                        <thead class="govuk-table__head">
                                            <tr class="govuk-table__row">
                                                @if (archivedLegislativeArea.ShowPurposeOfAppointmentColumn)
                                                {
                                                    <th scope="col" class="govuk-table__header">Purpose of appointment</th>
                                                }
                                                @if (archivedLegislativeArea.ShowCategoryColumn)
                                                {
                                                    <th scope="col" class="govuk-table__header">Product category</th>
                                                }
                                                @if (archivedLegislativeArea.ShowProductColumn)
                                                {
                                                    <th scope="col" class="govuk-table__header">Product</th>
                                                }
                                                @if (archivedLegislativeArea.ScopeOfAppointments.Any())
                                                {
                                                    <th scope="col" class="govuk-table__header">Applicable conformity assessment procedure</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody class="govuk-table__body">
                                            @if (!archivedLegislativeArea.ScopeOfAppointments.Any())
                                            {
                                                <tr>
                                                    <td>No scope of appointments</td>
                                                </tr>
                                            }

                                            @for (int j = 0; j < archivedLegislativeArea.ScopeOfAppointments.Count; j++)
                                            {
                                                var scopeOfAppointment = archivedLegislativeArea.ScopeOfAppointments[j];
                                                var noOfProductsInScopeOfAppointment = scopeOfAppointment.NoOfProductsInScopeOfAppointment;
                                                var nextProductIndex = j;
                                                @for (int k = 0; k < noOfProductsInScopeOfAppointment; k++)
                                                {
                                                    var showBorder = k == noOfProductsInScopeOfAppointment - 1;
                                                    <tr class="govuk-table__row">
                                                        @if (k == 0)
                                                        {
                                                            @if (archivedLegislativeArea.ShowPurposeOfAppointmentColumn)
                                                            {
                                                                <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                    <label aria-hidden="true">Purpose of appointment</label>
                                                                    @scopeOfAppointment.PurposeOfAppointment
                                                                </td>
                                                            }

                                                            @if (archivedLegislativeArea.ShowCategoryColumn)
                                                            {
                                                                <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                    <label aria-hidden="true">Product category</label>
                                                                    @scopeOfAppointment.Category
                                                                    @if (!string.IsNullOrEmpty(scopeOfAppointment.SubCategory))
                                                                    {
                                                                        <div class="govuk-!-margin-top-3">Product sub-category</div>
                                                                        <div>@scopeOfAppointment.SubCategory</div>
                                                                    }
                                                                </td>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            @if (archivedLegislativeArea.ShowPurposeOfAppointmentColumn)
                                                            {
                                                                <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                </td>
                                                            }

                                                            @if (archivedLegislativeArea.ShowCategoryColumn)
                                                            {
                                                                <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                </td>
                                                            }
                                                        }

                                                        @if (archivedLegislativeArea.ShowProductColumn)
                                                        {
                                                            <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                                <label aria-hidden="true">Product</label>
                                                                @Html.ValueOrNotApplicable(scopeOfAppointment.Product)
                                                            </td>
                                                        }
                                                        <td class="govuk-table__cell @Html.Conditional(!showBorder, "ukmcab-no-border")">
                                                            <label aria-hidden="true">Applicable conformity assessment procedure</label>
                                                            @if (scopeOfAppointment.Procedures != null)
                                                            {
                                                                @foreach (var procedure in scopeOfAppointment.Procedures)
                                                                {
                                                                    <p>@procedure</p>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <span>Not provided</span>
                                                            }
                                                        </td>
                                                    </tr>

                                                    if ((nextProductIndex + 1) < (j + noOfProductsInScopeOfAppointment))
                                                    {
                                                        nextProductIndex += 1;
                                                        scopeOfAppointment = archivedLegislativeArea.ScopeOfAppointments[nextProductIndex];
                                                    }
                                                    else
                                                    {
                                                        j = nextProductIndex;
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </details>
                        }
                    }
                </fieldset>
            </div>
            <div>
                <div class="govuk-button-group">
                    
                    @if (Model.IsFromSummary)
                    {
                        <govuk-button-link asp-area="admin" asp-controller="CAB" asp-action="Summary" asp-route-id="@Model.CABId" asp-route-subSectionEditAllowed="true">Continue</govuk-button-link>
                    }
                    else
                    {
                        <govuk-button-link asp-area="admin" asp-controller="FileUpload" asp-action="SchedulesUpload" asp-route-id="@Model.CABId">Continue</govuk-button-link>
                    }
                    
                    <govuk-button-link class="govuk-button--secondary" asp-area="Admin" asp-controller="CabManagement" asp-action="CABManagement" asp-route-unlockCab="@Model.CABId">
                        Save as draft
                    </govuk-button-link>

                    @if (Model.IsFromSummary)
                    {
                        <a asp-area="Admin" asp-controller="CAB" asp-action="Summary" asp-route-id="@cabId" asp-route-subSectionEditAllowed="true" class="govuk-link govuk-link--no-visited-state">Cancel</a>
                    }
                    else
                    {
                        <a asp-area="admin" asp-controller="CabManagement" asp-action="CABManagement" asp-route-unlockCab="@Model.CABId" class="govuk-link govuk-link--no-visited-state">Cancel</a>
                    }
                </div>
            </div>
        </div>
    </form>
</div>