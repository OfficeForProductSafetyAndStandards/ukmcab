@using UKMCAB.Web.UI.Areas.Admin.Controllers.LegislativeArea
@model UKMCAB.Web.UI.Models.ViewModels.Admin.CAB.LegislativeArea.SubCategoryViewModel

@section BackButton
{
    <div class="govuk-width-container ">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <govuk-back-link asp-route="@LegislativeAreaDetailsController.Routes.PurposeOfAppointment" asp-route-id="@Model.CABId" asp-route-scopeId="@Model.ScopeId" />
            </div>
            </div>
        </div>
    </div>
}


<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-m">Create a CAB</span>
        <h1 class="govuk-heading-l">Legislative area</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form id="legislativeForm" method="post" novalidate>
            <input type="hidden" asp-for="LegislativeArea" />
            <input type="hidden" asp-for="PurposeOfAppointment" />
            <input type="hidden" asp-for="Category" />
            <h2 class="govuk-heading-s">Legislative Area</h2>
            <p class="govuk-body">@Model.LegislativeArea</p>
            @if (Model.PurposeOfAppointment != null)
            {
                <h2 class="govuk-heading-s">Purpose of appointment</h2>
                <p class="govuk-body">@Model.PurposeOfAppointment</p>
            }
            @if (Model.Category != null)
            {
                <h2 class="govuk-heading-s">Category</h2>
                <p class="govuk-body">@Model.Category</p>
            }
            <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState, nameof(Model.SelectedSubCategoryId))">
                <govuk-radios asp-for="SelectedSubCategoryId">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-label--s">
                            Legislative area
                        </govuk-radios-fieldset-legend>
                        @foreach (var item in Model.SubCategories)
                        {
                            <govuk-radios-item value="@item.Value">@item.Text</govuk-radios-item>
                        }
                    </govuk-radios-fieldset>
                </govuk-radios>
            </div>
            <div class="govuk-button-group">
                <govuk-button name="submitType" type="submit" value="@Constants.SubmitType.Continue">Continue to next step</govuk-button>
            </div>
            <div class="govuk-button-group">
                <govuk-button name="submitType" type="submit" value="@Constants.SubmitType.AdditionalInfo">Go to additional information</govuk-button>
                <govuk-button name="submitType" class="govuk-button--secondary" type="submit" value="@Constants.SubmitType.Save">Save as draft</govuk-button>
                <a class="govuk-link govuk-link--no-visited-state" asp-area="admin" asp-controller="cab" asp-action="summary" asp-route-id="@Model.CABId" asp-route-returnUrl="@Model.ReturnUrl">Cancel</a>
            </div>
        </form>
    </div>


</div>