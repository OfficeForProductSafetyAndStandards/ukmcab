@model UKMCAB.Web.UI.Models.ViewModels.Admin.CAB.CabSubmittedForApprovalConfirmationViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="Partials/_Confirmation" model="Model.ConfirmationViewModel"/>
        <h2 class="govuk-heading-m govuk-!-margin-top-9">What happens next</h2>
        <p class="govuk-body">
            Your request has been sent to OPSS to review. You will be notified when the CAB is approved or declined.
        </p>
        <p class="govuk-body">
            <a id="viewCab" class="govuk-link" asp-route="@CABController.Routes.CabSummary" asp-route-id="@Model.Id">View CAB</a>
        </p>
        <p class="govuk-body">
            <a class="govuk-link" asp-area="admin" asp-controller="CabManagement" asp-action="CABManagement">Go to CAB management</a>
        </p>
    </div>
</div>