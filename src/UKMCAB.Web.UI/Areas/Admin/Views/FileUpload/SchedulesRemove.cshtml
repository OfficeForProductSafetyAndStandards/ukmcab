@using UKMCAB.Web.UI.Models.ViewModels.Admin.CAB.Enums
@model UKMCAB.Web.UI.Models.ViewModels.Admin.CAB.Schedule.RemoveScheduleViewModel

@section BackButton
{
    <div class="govuk-width-container ">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <govuk-back-link asp-area="admin" asp-controller="cab" asp-action="schedules-list" asp-route-id="@Model.CabId" />
            </div>
        </div>
    </div>
}

@{
    var file = Model.FileUpload;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Remove product schedule</h1>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <form id="scheduleForm" method="post" novalidate>
            <input type="hidden" asp-for="Title" />            
            <h2 class="govuk-heading-s">You have selected: </h2>
            <dl class="govuk-summary-list govuk-summary-list--no-border">
                <div class="govuk-summary-list__row  govuk-!-padding-top-5">
                    <dt class="govuk-summary-list__key">
                        Title:
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @file.Label
                    </dd>
                </div>
                <div class="govuk-summary-list__row  govuk-!-padding-top-5">
                    <dt class="govuk-summary-list__key">
                        Filename:
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @file.FileName
                    </dd>
                </div>
                <div class="govuk-summary-list__row  govuk-!-padding-top-5">
                    <dt class="govuk-summary-list__key">
                        From legislative area:
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @file.LegislativeArea
                    </dd>
                </div>
            </dl>            
            <govuk-radios asp-for="RemoveAction">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-label--s">
                            Select an option
                        </govuk-radios-fieldset-legend>
                    <govuk-radios-item value="@RemoveActionEnum.Remove">Remove</govuk-radios-item>
                    <govuk-radios-item value="@RemoveActionEnum.Archive">Archive</govuk-radios-item>
                    </govuk-radios-fieldset>
            </govuk-radios>
            <div class="govuk-warning-text">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-visually-hidden">Warning</span>
                    @if (Model.LastSchedule)
                    {
                        @:Removing this product schedule will leave the legislative area with no product schedules linked to it.
                    }
                    else
                    {
                        @:Removing this product schedule will remove it from the legislative area it's linked to.
                    }
                </strong>
            </div>
            <div class="govuk-button-group">
                <govuk-button name="submitType" type="submit" value="@Constants.SubmitType.Confirm">Confirm</govuk-button>
                <a class="govuk-link govuk-link--no-visited-state" asp-area="admin" asp-controller="FileUpload" asp-action="SchedulesList" asp-route-id="@Model.CabId">Cancel</a>
            </div>
        </form>
    </div>
</div>