@model UKMCAB.Web.UI.Models.ViewModels.Admin.Notification.NotificationTableViewModel

@{
    ViewBag.Title = Model.Title!;
}
<govuk-back-link href="/"/>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@Model.Title</h1>
    </div>
</div>
<div class="govuk-grid-row">
    <govuk-tabs class="notifications-tabs" title=" ">
        <govuk-tabs-item id="Unassigned" label="Unassigned">
            <div id="notifications-sort-form-group">
                <form method="get" id="sortForm">
                    <div id="mobile-sort" class="govuk-form-group">
                        <label class="govuk-label" asp-for="@Model.SortField">
                            Sort by
                        </label>
                        <a href="" id="sortButton" aria-sort="@(Model.SortDirection.Equals("desc") ? "descending" : "ascending")" class="notifications-sort" role="button"></a>
                        <select class="govuk-select" asp-for="@Model.SortField" name="sf" id="sortOption">
                            <option value="From">From</option>
                        </select>
                        <input type="hidden" name="sd" id="sortDirection" value="@Model.SortDirection"/>
                    </div>
                </form>
            </div>
            <partial name="_NotificationsTable" model="@Model"/>
        </govuk-tabs-item>
        <govuk-tabs-item id="assigned-me" label="Assigned to me">
            <partial name="_NotificationsTable" model="@Model"/>
        </govuk-tabs-item>
        <govuk-tabs-item id="assigned-group" label="Assigned to [user group]">
            <partial name="_NotificationsTable" model="@Model"/>
        </govuk-tabs-item>
        <govuk-tabs-item id="completed" label="Completed">
            <partial name="_NotificationsTable" model="@Model"/>
        </govuk-tabs-item>
    </govuk-tabs>
</div>

