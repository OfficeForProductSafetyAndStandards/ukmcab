@model UKMCAB.Web.UI.Models.ViewModels.Admin.Notification.NotificationsViewModel

@{
    ViewBag.Title = Model.Title!;
}
<govuk-back-link href="/"/>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@Model.Title</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <govuk-tabs class="notifications-tabs" title=" ">
            <govuk-tabs-item id="Unassigned" label="Unassigned" asp-route="@NotificationController.Routes.NotificationsHome">
                <partial name="_NotificationsTable" model="@Model"/>
            </govuk-tabs-item>
            <govuk-tabs-item id="assigned-me" label="Assigned to me" asp-route="@NotificationController.Routes.NotificationsAssignedToMe">
                <partial name="_NotificationsTable" model="@Model"/>
            </govuk-tabs-item>
            <govuk-tabs-item id="assigned-group" label="Assigned to [user group]" asp-route="@NotificationController.Routes.NotificationsAssignedToMyGroup">
                <partial name="_NotificationsTable" model="@Model"/>
            </govuk-tabs-item>
            <govuk-tabs-item id="completed" label="Completed" asp-route="@NotificationController.Routes.NotificationsCompleted">
                <partial name="_NotificationsTable" model="@Model"/>
            </govuk-tabs-item>
        </govuk-tabs>
    </div>
</div>