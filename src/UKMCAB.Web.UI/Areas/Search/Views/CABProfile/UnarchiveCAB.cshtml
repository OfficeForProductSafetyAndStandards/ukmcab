@using System.Net
@model UnarchiveCABViewModel
@{
    ViewData["nav"] = "search";
    var returnUrl = WebUtility.UrlEncode(Model.ReturnURL);
}

@section BackButton
{
    <div class="govuk-width-container ">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <a asp-area="Search" asp-controller="CABProfile" asp-action="Index" asp-route-id="@Model.CABId" asp-route-returnUrl="@returnUrl" class="govuk-back-link">Back</a>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="Partials/_ValidationSummary" model="null" />
        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                    Unarchive @Model.CABName
                </h1>
            </legend>
            <form method="post">
                <input type="hidden" asp-for="ReturnURL" value="@Model.ReturnURL" />
                <input type="hidden" asp-for="CABId" value="@Model.CABId" />
               
                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="1000">
                    <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState, "UnarchiveInternalReason")">
                        <h3 class="govuk-label-wrapper">
                            <label class="govuk-label govuk-label--m" asp-for="UnarchiveInternalReason">
                                Internal notes
                            </label>
                        </h3>
                        <div id="with-hint-hint" class="govuk-hint">
                            These notes will only be seen by users that are signed in to the UKMCAB service.
                        </div>
                        <p id="UnarchiveInternalReason" error-id-for="UnarchiveInternalReason" class="govuk-error-message">
                            <span asp-validation-for="UnarchiveInternalReason" class="govuk-error-message"></span>
                        </p>
                        <textarea class="govuk-textarea govuk-js-character-count @Html.ShowModelStateInputErrorClass(ViewData.ModelState, "UnarchiveInternalReason")" id="with-hint" rows="5" asp-for="UnarchiveInternalReason" aria-describedby="with-hint-info with-hint-hint" error-describedby-for="UnarchiveInternalReason"></textarea>

                    </div>
                    <div id="with-hint-info" class="govuk-hint govuk-character-count__message">You have 1,000 characters remaining</div>
                </div>

                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="1000">
                    <div class="govuk-form-group @Html.ShowModelStateFormGroupErrorClass(ViewData.ModelState, "UnarchivePublicReason")">
                        <h3 class="govuk-label-wrapper ukmcab-padding-top-30">
                            <label class="govuk-label govuk-label--m" asp-for="UnarchivePublicReason">
                                Reason (optional)
                            </label>
                        </h3>
                        <div id="archive-public-reason-hint-hint" class="govuk-hint">
                            Enter the reason for unarchiving this CAB. This will be shown to all users in the CAB history page.
                        </div>
                        <p id="UnarchivePublicReason" error-id-for="UnarchivePublicReason" class="govuk-error-message">
                            <span asp-validation-for="UnarchivePublicReason" class="govuk-error-message"></span>
                        </p>
                        <textarea class="govuk-textarea govuk-js-character-count @Html.ShowModelStateInputErrorClass(ViewData.ModelState, "UnarchivePublicReason")" id="archive-public-reason-hint" rows="5" aria-describedby="archive-public-reason-hint-info archive-public-reason-hint-hint" asp-for="UnarchivePublicReason"></textarea>
                    </div>
                    <div id="archive-public-reason-hint-info" class="govuk-hint govuk-character-count__message">
                        You can enter up to 1000 characters
                    </div>
                </div>

                <div class="govuk-warning-text">
                        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                        <strong class="govuk-warning-text__text">
                            <span class="govuk-warning-text__assistive">Warning</span>
                            Unarchived CAB profiles will be saved as draft.
                        </strong>
                    </div>
                <div class="govuk-button-group">
                    <button class="govuk-button" data-module="govuk-button">
                        Unarchive
                    </button>
                    <a class="govuk-button govuk-button--secondary" asp-area="Search" asp-controller="CABProfile" asp-action="Index" asp-route-id="@Model.CABId" asp-route-returnUrl="@returnUrl">Cancel</a>
                </div>
            </form>
        </fieldset>
    </div>
</div>
