@model UKMCAB.Web.UI.Models.ViewModels.Search.RequestToUnpublishCAB.RequestToUnpublishConfirmationViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="Partials/_Confirmation" model="@Model.ConfirmationViewModel"/>

        <h2 class="govuk-heading-m govuk-!-margin-top-9">What happens next</h2>
        <p class="govuk-body">
            Your request has been sent to OPSS to review. You will be notified when the request is approved or declined.
        </p>
        <p class="govuk-body">
            <a class="govuk-link" asp-area="Search" asp-controller="CABProfile" asp-action="Index" asp-route-id="@Model.URLSlug" asp-route-returnURL="confirmation">View CAB</a>
        </p>
        <p class="govuk-body">
            <a class="govuk-link" asp-area="admin" asp-controller="ServiceManagement" asp-action="ServiceManagement">Go to Home page</a>
        </p>
    </div>
</div>