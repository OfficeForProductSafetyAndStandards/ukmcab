@using UKMCAB.Web.UI.Extensions
@model SearchViewModel

<div id="search-results-form-column" class="govuk-grid-column-one-third govuk-body">
    <form id="search-results-form" method="get">
        <div id="search-filter-container">

            <div id="search-filter-header">
                <a href="#" class="govuk-visually-hidden">Cancel</a>
                <h3 class="govuk-heading-s">Filters</h3>
                <a id="clear-filters-link" href="@Context.Request.RemoveQueryParameters("bodytypes","legislativeares","registeredofficelocation","testinglocations")" class="govuk-link govuk-link--no-visited-state">Clear all filters</a>
            </div>

            <div id="search-filter-keywords">
                <h3 class="govuk-heading-s">Keyword search</h3>
                <div id="search-filter-keywords-input-container">
                    <input type="text" asp-for="Keywords" class="govuk-input"/>
                    <button type="submit">Search</button>
                </div>
            </div>
            
            <div id="search-filter-options">
                <div class="search-filter-option govuk-checkboxes--small">
                    <h3 class="govuk-heading-s">Body type</h3>
                    <div class="search-filter-option-list">
                        <fieldset>
                            @foreach (var filterOption in Model.BodyTypeOptions)
                            {
                                <div class="search-filter-option-item">
                                    <input type="checkbox" name="BodyTypes" id="@filterOption.Id" value="@filterOption.Value" class="" data-track-category="filterClicked" data-uncheck-track-category="filterRemoved" data-track-action="@filterOption.Value" data-track-label="@filterOption.Value" data-controls="js-search-results-info" aria-controls="js-search-results-info" checked="@filterOption.Selected">
                                    <label class="search-filter-option-item-label" for="@filterOption.Id">@filterOption.Value</label>
                                </div>
                            }
                        </fieldset>
                    </div>
                </div>
                
                <div class="search-filter-option govuk-checkboxes--small">
                    <h3 class="govuk-heading-s">Registered office location</h3>
                    <div class="search-filter-option-list">
                        <fieldset>
                            @foreach (var filterOption in Model.RegisteredOfficeLocationOptions)
                            {
                                <div class="search-filter-option-item">
                                    <input type="checkbox" name="RegisteredOfficeLocations" id="@filterOption.Id" value="@filterOption.Value" class="" data-track-category="filterClicked" data-uncheck-track-category="filterRemoved" data-track-action="@filterOption.Value" data-track-label="@filterOption.Value" data-controls="js-search-results-info" aria-controls="js-search-results-info" checked="@filterOption.Selected">
                                    <label class="search-filter-option-item-label" for="@filterOption.Id">@filterOption.Value</label>
                                </div>
                            }
                        </fieldset>
                    </div>
                </div>

                <div class="search-filter-option govuk-checkboxes--small">
                    <h3 class="govuk-heading-s">Testing location</h3>
                    <div class="search-filter-option-list">
                        <fieldset>
                            @foreach (var filterOption in Model.TestingLocationOptions)
                            {
                                <div class="search-filter-option-item">
                                    <input type="checkbox" name="TestingLocations" id="@filterOption.Id" value="@filterOption.Value" class="" data-track-category="filterClicked" data-uncheck-track-category="filterRemoved" data-track-action="@filterOption.Value" data-track-label="@filterOption.Value" data-controls="js-search-results-info" aria-controls="js-search-results-info" checked="@filterOption.Selected">
                                    <label class="search-filter-option-item-label" for="@filterOption.Id">@filterOption.Value</label>
                                </div>
                            }
                        </fieldset>
                    </div>
                </div>

                <div class="search-filter-option govuk-checkboxes--small">
                    <h3 class="govuk-heading-s">Legislative area</h3>
                    <div class="search-filter-option-list">
                        <fieldset>
                            @foreach (var filterOption in Model.LegislativeAreaOptions)
                            {
                                <div class="search-filter-option-item">
                                    <input type="checkbox" name="LegislativeAreas" id="@filterOption.Id" value="@filterOption.Value" class="" data-track-category="filterClicked" data-uncheck-track-category="filterRemoved" data-track-action="@filterOption.Value" data-track-label="@filterOption.Value" data-controls="js-search-results-info" aria-controls="js-search-results-info" checked="@filterOption.Selected">
                                    <label class="search-filter-option-item-label" for="@filterOption.Id">@filterOption.Value</label>
                                </div>
                            }
                        </fieldset>
                    </div>
                </div>

                
                <div id="search-filter-button-wrapper">
                    <button class="govuk-button">Apply filters</button>
                </div>
            </div>

        </div>
    </form>
</div>